<!DOCTYPE html>
<html>
<head>
    <title>Get Coordinates</title>
    <script>
        function getCoordinates() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                alert("Geolocation is not supported by this browser.");
            }
        }

        function showPosition(position) {
            const latitude = position.coords.latitude;
            const longitude = position.coords.longitude;
            const coordinates = `${latitude},${longitude}`;

            // Google Form link with combined coordinates pre-filled
            const formLink = `https://docs.google.com/forms/d/e/1FAIpQLSdMKomYQIoHzxRc_nGSlZwP-y5Jbf18Cehasku63DrmhpiZZA/viewform?usp=pp_url&entry.1066283997=${coordinates}`;
            window.location.href = formLink;
        }
    </script>
</head>
<body onload="getCoordinates()">
    <h1>Redirecting...</h1>
</body>
</html>
